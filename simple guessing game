print("what does a house wear?")
print("instruction: you have 3 attempts ")

secret_word ="adress"
guess = ""
guess_count = 0
guess_limit = 3
out_of_guesses = False

while guess != secret_word and not(out_of_guesses):
    if guess_count < guess_limit:
        guess = input("enter guess: ")
        guess_count +=1
    else:
        out_of_guesses = True

if out_of_guesses:
    print("haha you suck very hard")
else:
    print(" you guessed it right")
